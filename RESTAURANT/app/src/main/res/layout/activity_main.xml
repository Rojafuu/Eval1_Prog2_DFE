<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="206dp"
        android:layout_height="121dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_app_restaurant" />


    <TextView
        android:id="@+id/textViewPastel"
        android:layout_width="146dp"
        android:layout_height="0dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="56dp"
        android:text="Pastel de Choclo"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogo" />

    <TextView
        android:id="@+id/textViewCant"
        android:layout_width="29dp"
        android:layout_height="16dp"
        android:layout_marginTop="12dp"
        android:text="Cant"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/textViewPastel"
        app:layout_constraintTop_toBottomOf="@+id/textViewPastel" />

    <TextView
        android:id="@+id/textViewValorPastel"
        android:layout_width="74dp"
        android:layout_height="21dp"
        android:layout_marginTop="20dp"
        android:text="subtotal"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewCant"
        app:layout_constraintTop_toBottomOf="@+id/textViewCant" />

    <ImageView
        android:id="@+id/imageViewPastel"
        android:layout_width="123dp"
        android:layout_height="106dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toStartOf="@+id/textViewPastel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pastel_de_choclo" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="59dp"
        android:layout_height="48dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:ems="6"
        android:hint="N°"
        android:importantForAccessibility="yes"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/textViewValorPastel"
        app:layout_constraintStart_toEndOf="@+id/textViewCant"
        app:layout_constraintTop_toBottomOf="@+id/textViewPastel"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewCazuela"
        android:layout_width="125dp"
        android:layout_height="104dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewComida"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPastel"
        app:layout_constraintVertical_bias="0.045"
        app:srcCompat="@drawable/cazuela" />


    <TextView
        android:id="@+id/textViewCazuela"
        android:layout_width="69dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="Cazuela"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewCazuela"
        app:layout_constraintTop_toBottomOf="@+id/textViewValorPastel" />

    <TextView
        android:id="@+id/textViewCant1"
        android:layout_width="35dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Cant"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewCazuela"
        app:layout_constraintTop_toBottomOf="@+id/textViewCazuela" />

    <TextView
        android:id="@+id/textViewValorCazuela"
        android:layout_width="68dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="subtotal"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewCazuela"
        app:layout_constraintTop_toBottomOf="@+id/textViewCant1" />

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="57dp"
        android:layout_height="51dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="N°"
        android:importantForAccessibility="yes"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/textViewResultComida"
        app:layout_constraintStart_toEndOf="@+id/textViewCant1"
        app:layout_constraintTop_toBottomOf="@+id/textViewCazuela"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/textViewComida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Comida: "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textViewResultComida"
        app:layout_constraintHorizontal_bias="0.914"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewValorCazuela" />

    <TextView
        android:id="@+id/textViewPropina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:text="Propina: "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewTotal"
        app:layout_constraintEnd_toStartOf="@+id/textViewResultPropina"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewComida"
        app:layout_constraintTop_toBottomOf="@+id/textViewComida"
        app:layout_constraintVertical_bias="0.307" />

    <TextView
        android:id="@+id/textViewTotal"
        android:layout_width="66dp"
        android:layout_height="26dp"
        android:text="TOTAL: "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewResultTotal"
        app:layout_constraintEnd_toStartOf="@+id/textViewResultTotal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewPropina" />

    <TextView
        android:id="@+id/textViewResultComida"
        android:layout_width="90dp"
        android:layout_height="29dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="108dp"
        android:text="Resultado"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewResultPropina"
        app:layout_constraintTop_toBottomOf="@+id/textViewValorCazuela" />

    <TextView
        android:id="@+id/textViewResultPropina"
        android:layout_width="77dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="100dp"
        android:text="Propina"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textViewResultTotal"
        app:layout_constraintTop_toBottomOf="@+id/textViewResultComida" />

    <TextView
        android:id="@+id/textViewResultTotal"
        android:layout_width="85dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="92dp"
        android:text="Total"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewResultPropina" />

    <Switch
        android:id="@+id/switchPropina"
        android:layout_width="52dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toStartOf="@+id/textViewPropina"
        app:layout_constraintHorizontal_bias="0.671"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCazuela" />


</androidx.constraintlayout.widget.ConstraintLayout>